<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_shadow_start_color"
    android:layout_margin="10dp"
    android:paddingVertical="5dp">

    <TextView
        android:id="@+id/tvNomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Soal 1"/>

    <TextView
        android:id="@+id/tvSoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Eksplorasi Data Analisis"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/tvjawab1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Jawaban 1"/>
        <RadioButton
            android:id="@+id/tvjawab2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Jawaban 2"/>
        <RadioButton
            android:id="@+id/tvjawab3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Jawaban 3"/>
        <RadioButton
            android:id="@+id/tvjawab4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Jawaban 4"/>
    </RadioGroup>
</LinearLayout>